generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model actividad {
  id          Int       @id @default(autoincrement())
  nombre      String
  descripcion String
  tipo        String
  imagen      String?   
  horaInicio  DateTime  
  horaFin     DateTime 
  cupo        Int
}

model conferencia {
  id          Int       @id @default(autoincrement())
  nombre      String
  descripcion String
  imagen      String?  
  horaInicio  DateTime 
  horaFin     DateTime
}

